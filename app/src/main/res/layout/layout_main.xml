<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <com.christmas.ripplelayout.RippleLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:rippleColor="@android:color/holo_red_light"
      app:rippleDuration="500">

    <TextView
        android:id="@+id/tv_demo_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/holo_blue_light"
        android:clickable="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/hello_world"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_demo_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_demo_one"
        android:layout_margin="20dp"
        android:background="@android:color/holo_purple"
        android:clickable="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/hello_world"
        android:textSize="18sp"
        android:textStyle="bold" />

  </com.christmas.ripplelayout.RippleLayout>

  <com.christmas.ripplelayout.RippleLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:rippleColor="@android:color/holo_orange_light"
      app:rippleZoom="true"
      app:rippleZoomScale="1.2">

    <TextView
        android:id="@+id/tv_demo_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_demo_two"
        android:layout_margin="20dp"
        android:background="@android:color/holo_green_light"
        android:clickable="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/hello_world"
        android:textSize="18sp"
        android:textStyle="bold" />

  </com.christmas.ripplelayout.RippleLayout>

  <com.christmas.ripplelayout.RippleLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:rippleColor="@android:color/holo_red_light"
      app:rippleDuration="1000"
      app:rippleCenterStart="true">

    <TextView
        android:id="@+id/tv_demo_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_demo_three"
        android:layout_margin="20dp"
        android:background="@android:color/holo_orange_light"
        android:clickable="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/hello_world"
        android:textSize="18sp"
        android:textStyle="bold" />

  </com.christmas.ripplelayout.RippleLayout>

</LinearLayout>
