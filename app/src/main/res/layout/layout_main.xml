<com.christmas.ripplelayout.RippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rippleColor="@android:color/holo_blue_bright">

  <TextView
      android:id="@+id/tv_demo_one"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:padding="20dp"
      android:gravity="center"
      android:textSize="18sp"
      android:textStyle="bold"
      android:text="@string/hello_world"
      android:clickable="true"
      android:background="@android:color/holo_blue_light"/>

  <TextView
      android:id="@+id/tv_demo_two"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_demo_one"
      android:layout_margin="20dp"
      android:padding="20dp"
      android:gravity="center"
      android:textSize="18sp"
      android:textStyle="bold"
      android:text="@string/hello_world"
      android:clickable="true"
      android:background="@android:color/holo_purple"/>

  <TextView
      android:id="@+id/tv_demo_three"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_demo_two"
      android:layout_margin="20dp"
      android:padding="20dp"
      android:gravity="center"
      android:textSize="18sp"
      android:textStyle="bold"
      android:text="@string/hello_world"
      android:clickable="true"

      android:background="@android:color/holo_green_light"/>

  <TextView
      android:id="@+id/tv_demo_four"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_demo_three"
      android:layout_margin="20dp"
      android:padding="20dp"
      android:gravity="center"
      android:textSize="18sp"
      android:textStyle="bold"
      android:text="@string/hello_world"
      android:clickable="true"
      android:background="@android:color/holo_orange_light"/>

</com.christmas.ripplelayout.RippleLayout>
